{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "-I", "src/core",
                "-I", "src/ui",
                "-I", "src/utils",
                "src/core/*.cpp",
                "src/ui/*.cpp",
                "src/utils/*.cpp",
                "-o",
                "build/main.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]

        }
    ]
}
